  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Unit tests",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--",
          "--show-output",
          "--bin=groove",
          "--package=groove",
        ],
        "filter": {
          "name": "groove",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Speaker: perform",
      "cargo": {
        "args": [
          "build",
          "--bin=groove",
          "--package=groove"
        ],
        "filter": {
          "name": "groove",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "YAML to speaker",
      "cargo": {
        "args": [
          "build",
          "--bin=groove",
          "--package=groove"
        ],
        "filter": {
          "name": "groove",
          "kind": "bin"
        }
      },
      "args": [
        "--yaml-in",
        "scripts/everything.yaml"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Run script file",
      "cargo": {
        "args": [
          "build",
          "--bin=groove",
          "--package=groove"
        ],
        "filter": {
          "name": "groove",
          "kind": "bin"
        }
      },
      "args": [
        "--script-in",
        "scripts/test.grv"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Speaker: MIDI controller",
      "cargo": {
        "args": [
          "build",
          "--bin=groove",
          "--package=groove"
        ],
        "filter": {
          "name": "groove",
          "kind": "bin"
        }
      },
      "args": [
        "--use-midi-controller"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Speaker: major scale",
      "cargo": {
        "args": [
          "build",
          "--bin=groove",
          "--package=groove"
        ],
        "filter": {
          "name": "groove",
          "kind": "bin"
        }
      },
      "args": [
        "--midi-in",
        "midi_files/major-scale-spaced-notes.mid"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "File: major scale",
      "cargo": {
        "args": [
          "build",
          "--bin=groove",
          "--package=groove"
        ],
        "filter": {
          "name": "groove",
          "kind": "bin"
        }
      },
      "args": [
        "--midi-in",
        "midi_files/major-scale-spaced-notes.mid",
        "--wav-out",
        "major-scale-cello.wav"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Speaker: Gonna Make You Sweat",
      "cargo": {
        "args": [
          "build",
          "--bin=groove",
          "--package=groove"
        ],
        "filter": {
          "name": "groove",
          "kind": "bin"
        }
      },
      "args": [
        "--midi-in",
        "midi_files/d-gonnamakeyousweat.mid"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "File: Gonna Make You Sweat",
      "cargo": {
        "args": [
          "build",
          "--bin=groove",
          "--package=groove"
        ],
        "filter": {
          "name": "groove",
          "kind": "bin"
        }
      },
      "args": [
        "--midi-in",
        "midi_files/d-gonnamakeyousweat.mid",
        "--wav-out",
        "Gonna_Make_You_Sweat.wav"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "File: Multi-channel",
      "cargo": {
        "args": [
          "build",
          "--bin=groove",
          "--package=groove"
        ],
        "filter": {
          "name": "groove",
          "kind": "bin"
        }
      },
      "args": [
        "--midi-in",
        "midi_files/multi-channel.mid",
        "--wav-out",
        "multi-channel.wav"
      ],
      "cwd": "${workspaceFolder}"
    },
  ]
}
